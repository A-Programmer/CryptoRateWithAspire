@using Project.MvcClient.ViewModels.CryptoCurrencyViewModels
@model CryptoCurrencyRate

@{
    ViewData["Title"] = "Bitcoin Prices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bitcoin Prices</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Currency</th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (KeyValuePair<string, Quote> quote in Model.Data["1"].Quote)
        {
            <tr>
                <th scope="row">@quote.Key</th>
                <td>@quote.Value.Price</td>
            </tr>
        }
    </tbody>
</table>
